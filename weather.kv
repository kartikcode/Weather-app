#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.uix.listadapter.ListAdapter
#: import main main
WeatherRoot:
<WeatherRoot>
    AddLocationForm:
        orientation:"vertical"
        search_input:search_box
        BoxLayout:
            height:"40dp"
            size_hint_y:None
            TextInput:
                id: search_box
                size_hint_x:50
            Button:
                text:"Search"
                size_hint_x:25
                on_press:root.search_location()
            Button:
                text:"Current Location"
                size_hint_x:25
            ListView:
                id:search_results_list
                adapter:
                    ListAdapter(data=[],cls=main.LocationButton)
                
<LocationButton>:
    on_press:app.root.show_current_weather(self.text)
    
<CurrentWeather@BoxLayout>:
    location:""
    conditions:None
    temp:None
    temp_min:None
    temp_max:None
    orientation:"vertical"
    Label:
        text:root.location
    BoxLayout:
        orientation:"horizontal"
        size_hint_y:None
        height:"40dp"
        Button:
            text:"Add Location"
        Button:
            text:"Forecast"
